@page "/schoolmain"
@using MudBlazor
@using BlazorTest.Data
@inject SchoolService SchoolService
@inject NavigationManager NavigationManager


<MudContainer Class="d-flex justify-center" >
    <MudTable Items="SchoolService.Schools"  Style="width: 70%;">
        <HeaderContent>
            <MudTh Typo="Typo.h6">School Name</MudTh>
            <MudTh Typo="Typo.h6">Address</MudTh>
            <MudTh Typo="Typo.h6">School Code</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="School Name">@context.SchoolName</MudTd>
            <MudTd DataLabel="Address">@context.Address</MudTd>
            <MudTd DataLabel="School Code">@context.SchoolCode</MudTd>
        </RowTemplate>
    </MudTable>

</MudContainer>
<MudContainer Class="d-flex justify-center">
    <MudButton Class="mt-3" Variant="Variant.Filled" Color="Color.Primary" @onclick="CreateSchool">Add School</MudButton>
</MudContainer>




@code {

    private void CreateSchool()
    {
        NavigationManager.NavigateTo("/schoolform");

    }

}
